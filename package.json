  "scripts": {
    "start-dev-server": "concurrently -k -p \"[{name} - {time}]\" -c \"cyan,magenta\" -n \"client,server\" \"yarn start-client\" \"yarn start-server\"",
    "build": "yarn run clean && yarn build-server && yarn build-webpack && yarn build-templates && yarn build-api",
    "build-webpack": "NODE_ENV=production webpack -p --progress",
    "build-templates": "cp -R ./src/server/templates ./dist/server/",
    "build-api": "cp ./src/server/api/posts.json ./dist/server/api/posts.json",
    "build-server": "tsc -p ./tsconfig-server.json",
    "clean": "rm -rf ./public/* && rm -rf ./dist/*",
    "tscheck": "tsc --noEmit -p ./tsconfig.json && tsc --noEmit -p ./tsconfig-server.json",
    "lint": "tslint -c tslint.json '{definitions,src}/**/*.{ts,tsx}'",
    "test": "jest --no-cache --coverage",
    "full-test": "yarn run tscheck && yarn run lint && yarn test",
    "start-client": "yarn run clean && webpack --debug --watch",
    "start-server": "nodemon --exec ts-node src/server/index.ts --watch ./src -e ts,tsx",
    "start": "node dist/server/index.js"
  },
